# Logrotate configuration for LilithOS
/opt/lilithos/logs/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 0640 lilith lilith
    sharedscripts
    postrotate
        systemctl kill -s HUP lilithkit.service >/dev/null 2>&1 || true
    endscript
}

# Journald configuration for persistent logging
/var/log/journal/*/*.journal {
    weekly
    rotate 4
    maxsize 100M
    compress
    delaycompress
    missingok
    notifempty
    sharedscripts
    postrotate
        systemctl kill -s USR1 systemd-journald >/dev/null 2>&1 || true
    endscript
}
