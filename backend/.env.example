# üîê Scrypt Mining Framework - Environment Configuration
# Copy this file to .env and update with your settings

# Server Configuration
PORT=3001
NODE_ENV=development

# Mining Configuration
DEFAULT_ALGORITHM=scrypt
DEFAULT_THREADS=4
DEFAULT_INTENSITY=8

# Pool Configuration
# ProHashing Pool (Recommended for Scrypt)
PROHASHING_POOL_URL=stratum+tcp://us.mining.prohashing.com:3333
PROHASHING_POOL_NAME=ProHashing Pool
PROHASHING_USERNAME=EsKaye
PROHASHING_PASSWORD=a=scrypt

# Litecoin Pool (Alternative)
LITECOIN_POOL_URL=stratum+tcp://litecoinpool.org:3333
LITECOIN_POOL_NAME=Litecoin Pool

# Dogecoin Pool (Alternative)
DOGECOIN_POOL_URL=stratum+tcp://prohashing.com:3333
DOGECOIN_POOL_NAME=Dogecoin Pool

# Wallet Configuration
# Replace with your actual wallet addresses
DEFAULT_PROHASHING_USERNAME=EsKaye
DEFAULT_PROHASHING_PASSWORD=a=scrypt
DEFAULT_LITECOIN_WALLET=YOUR_LITECOIN_WALLET_ADDRESS
DEFAULT_DOGECOIN_WALLET=YOUR_DOGECOIN_WALLET_ADDRESS

# Worker Configuration
DEFAULT_WORKER_NAME=worker1

# Mining Parameters
MIN_HASHRATE=0.1
MAX_THREADS=16
MAX_INTENSITY=20

# Security Settings
ENABLE_STEALTH_MODE=false
ENABLE_GEO_LOAD_BALANCING=false
ENABLE_REMOTE_CONTROL=true

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_UPDATE_INTERVAL=5000

# Backup Pools (Optional)
BACKUP_POOL_1_URL=stratum+tcp://aikapool.com:3333
BACKUP_POOL_2_URL=stratum+tcp://coinotron.com:3333

# Cloud Mining Configuration (Optional)
ENABLE_CLOUD_MINING=false
AWS_REGION=us-east-1
GCP_PROJECT_ID=your-project-id
AZURE_SUBSCRIPTION_ID=your-subscription-id

# Stealth Configuration (Advanced)
PROCESS_ALIAS_NAME=system_service
HIDE_PROCESS=true
ENCRYPT_COMMUNICATION=true 

# Aikapool Scrypt (General Scrypt VarDiff)
AIKAPOOL_POOL_URL=stratum+tcp://stratum.aikapool.com:7950
AIKAPOOL_POOL_NAME=Aikapool Scrypt
AIKAPOOL_USERNAME=YourAikapoolLogin.WorkerName
AIKAPOOL_PASSWORD=x

# NiceHash Scrypt Rental (now pointed at ProHashing)
NICEHASH_POOL_URL=stratum+tcp://us.mining.prohashing.com:3333
NICEHASH_POOL_NAME=NiceHash Scrypt Rental (ProHashing)
NICEHASH_USERNAME=EsKaye
NICEHASH_PASSWORD=a=scrypt 