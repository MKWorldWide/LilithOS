{
  "name": "scrypt-mining-controller",
  "version": "1.0.0",
  "description": "🔐 Scrypt Mining Framework - Backend Mining Controller",
  "main": "mining-controller.js",
  "scripts": {
    "start": "node mining-controller.js",
    "dev": "nodemon mining-controller.js",
    "setup": "chmod +x setup-miners.sh && ./setup-miners.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "health": "curl http://localhost:3001/api/health",
    "status": "curl http://localhost:3001/api/mining/status",
    "pools": "curl http://localhost:3001/api/mining/pools"
  },
  "keywords": [
    "scrypt",
    "mining",
    "cryptocurrency",
    "litecoin",
    "dogecoin",
    "blockchain",
    "crypto-mining",
    "stratum",
    "pool-mining"
  ],
  "author": "M-K-World-Wide Scrypt Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/M-K-World-Wide/Scrypt.git"
  },
  "bugs": {
    "url": "https://github.com/M-K-World-Wide/Scrypt/issues"
  },
  "homepage": "https://github.com/M-K-World-Wide/Scrypt#readme",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "child_process": "^1.0.2",
    "path": "^0.12.7",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "config": {
    "unsafe-perm": true
  },
  "bin": {
    "scrypt-mining": "./mining-controller.js"
  },
  "files": [
    "mining-controller.js",
    "setup-miners.sh",
    "miner/",
    ".env.example",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
