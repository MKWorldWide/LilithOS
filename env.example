# ðŸŒ‘ LilithOS - Environment Configuration
# Enhanced Divine Architect Revenue Routing System
# AWS Amplify Integration

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Region
AWS_REGION=us-east-1

# AWS Account ID (will be auto-detected)
AWS_ACCOUNT_ID=

# Amplify App ID (will be auto-generated)
AMPLIFY_APP_ID=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Application URLs
REACT_APP_API_URL=https://api.lilithos.dev
REACT_APP_WEBSOCKET_URL=wss://api.lilithos.dev
REACT_APP_ADMIN_URL=https://admin.lilithos.dev

# Application Settings
REACT_APP_VERSION=3.0.0
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false

# =============================================================================
# AWS COGNITO AUTHENTICATION
# =============================================================================

# Cognito User Pool
REACT_APP_USER_POOLS_ID=us-east-1_xxxxxxxxx
REACT_APP_USER_POOLS_WEB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_OAUTH_DOMAIN=lilithos.auth.us-east-1.amazoncognito.com

# OAuth Configuration
REACT_APP_OAUTH_REDIRECT_SIGN_IN=http://localhost:3000/
REACT_APP_OAUTH_REDIRECT_SIGN_OUT=http://localhost:3000/
REACT_APP_OAUTH_RESPONSE_TYPE=code

# =============================================================================
# AWS SERVICES
# =============================================================================

# API Gateway
REACT_APP_API_GATEWAY_URL=https://api.lilithos.dev

# S3 Storage
REACT_APP_S3_BUCKET=lilithos-storage
REACT_APP_S3_REGION=us-east-1

# DynamoDB
REACT_APP_DYNAMODB_TABLE=lilithos-data

# CloudFront
REACT_APP_CLOUDFRONT_URL=https://cdn.lilithos.dev

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql://user:pass@host:5432/lilithos
REDIS_URL=redis://host:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0
API_TIMEOUT=30000

# =============================================================================
# TRAFFICFLOU INTEGRATION
# =============================================================================

# TrafficFlou API
TRAFFICFLOU_API_KEY=your-trafficflou-api-key
TRAFFICFLOU_API_URL=https://api.trafficflou.com
TRAFFICFLOU_WEBHOOK_SECRET=your-webhook-secret

# AI Model Configuration
AI_MODEL_PROVIDER=anthropic
AI_MODEL_API_KEY=your-ai-model-api-key
AI_MODEL_ENDPOINT=https://api.anthropic.com

# =============================================================================
# PRIMAL GENESIS ENGINE
# =============================================================================

# Engine Configuration
PRIMAL_GENESIS_ENABLED=true
PRIMAL_GENESIS_MODE=production
PRIMAL_GENESIS_LOG_LEVEL=info

# Revenue Routing
REVENUE_ROUTING_ENABLED=true
REVENUE_ROUTING_ALGORITHM=primal-genesis
REVENUE_ROUTING_OPTIMIZATION=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# CloudWatch
CLOUDWATCH_ENABLED=true
CLOUDWATCH_NAMESPACE=LilithOS
CLOUDWATCH_LOG_GROUP=/aws/lambda/lilithos-api

# X-Ray Tracing
XRAY_ENABLED=true
XRAY_SERVICE_NAME=LilithOS-API

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_MONITORING_SAMPLE_RATE=0.1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ORIGIN=https://lilithos.dev,https://www.lilithos.dev
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Amz-Date,X-Api-Key,X-Amz-Security-Token

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your-encryption-key-change-this-in-production
ENCRYPTION_ALGORITHM=aes-256-gcm

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# Build Configuration
BUILD_OPTIMIZATION=true
BUILD_SOURCEMAP=false
BUILD_MINIFY=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_AI_ROUTING=true
FEATURE_TRAFFICFLOU=true
FEATURE_PRIMAL_GENESIS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_MONITORING=true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# Third-party Integrations
INTEGRATION_STRIPE_ENABLED=false
INTEGRATION_STRIPE_SECRET_KEY=
INTEGRATION_STRIPE_PUBLISHABLE_KEY=

INTEGRATION_SENDGRID_ENABLED=false
INTEGRATION_SENDGRID_API_KEY=

INTEGRATION_SLACK_ENABLED=false
INTEGRATION_SLACK_WEBHOOK_URL=

# =============================================================================
# CUSTOM DOMAIN CONFIGURATION
# =============================================================================

# Custom Domain
CUSTOM_DOMAIN_ENABLED=false
CUSTOM_DOMAIN_NAME=lilithos.dev
CUSTOM_DOMAIN_CERTIFICATE_ARN=

# SSL Configuration
SSL_ENABLED=true
SSL_CERTIFICATE_ARN=

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=cron(0 2 * * ? *)
BACKUP_RETENTION_DAYS=30

# Disaster Recovery
DR_ENABLED=true
DR_REGION=us-west-2
DR_RTO_MINUTES=15
DR_RPO_MINUTES=5

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# CDN Configuration
CDN_ENABLED=true
CDN_CACHE_TTL_SECONDS=86400

# Lambda Configuration
LAMBDA_TIMEOUT_SECONDS=30
LAMBDA_MEMORY_SIZE_MB=512
LAMBDA_CONCURRENCY_LIMIT=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels
LOG_LEVEL_APP=info
LOG_LEVEL_HTTP=info
LOG_LEVEL_DB=warn
LOG_LEVEL_AWS=warn

# Log Format
LOG_FORMAT=json
LOG_TIMESTAMP=true
LOG_COLORS=false

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email Notifications
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_FROM=noreply@lilithos.dev
EMAIL_TO=admin@lilithos.dev

# Slack Notifications
SLACK_NOTIFICATIONS_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#lilithos-alerts

# =============================================================================
# MAINTENANCE
# =============================================================================

# Maintenance Mode
MAINTENANCE_MODE_ENABLED=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=5

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment Settings
DEPLOYMENT_BRANCH=main
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_AUTO_APPROVE=true

# Build Settings
BUILD_COMMAND=npm run build
BUILD_OUTPUT_DIR=dist
BUILD_CACHE_ENABLED=true

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

