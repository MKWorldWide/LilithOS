<animation name="lilybear_idle" version="1.0">
    <!-- Animation Metadata -->
    <metadata>
        <title>Lilybear Idle Animation</title>
        <description>Subtle idle animation for Lilybear mascot</description>
        <author>LilithOS Team</author>
        <category>mascot</category>
    </metadata>
    
    <!-- Animation Properties -->
    <properties>
        <frame_rate>30</frame_rate>
        <loop>true</loop>
        <duration>2000</duration> <!-- 2 seconds per cycle -->
        <position>bottom-right</position>
        <size>64x64</size>
    </properties>
    
    <!-- Frame Sequence -->
    <frames>
        <frame src="lilybear_idle_frames/frame_001.png" duration="66" />
