    <!-- Sound Integration -->
    <sounds>
        <sound src="lilith_whisper.wav" trigger="loop_start" volume="0.3" />
        <sound src="lilith_whisper.wav" trigger="frame_015" volume="0.1" />
    </sounds>
    
    <!-- Animation Events -->
    <events>
        <event frame="1" action="start" />
        <event frame="15" action="whisper" />
        <event frame="30" action="loop" />
    </events>
    
    <!-- Performance Settings -->
    <performance>
