# üîê Scrypt Mining Framework - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# MINING CONFIGURATION
# =============================================================================

# Default mining algorithm (scrypt, sha256, randomx)
MINING_ALGORITHM=scrypt

# Default mining pool
DEFAULT_POOL=prohashing

# ProHashing Configuration
PROHASHING_USERNAME=EsKaye
PROHASHING_PASSWORD=a=scrypt
PROHASHING_URL=stratum+tcp://prohashing.com:3333

# Alternative Pools
LITECOINPOOL_URL=stratum+tcp://litecoinpool.org:3333
DOGECOINPOOL_URL=stratum+tcp://doge.pool.example.com:3333
NICEHASH_URL=stratum+tcp://scrypt.usa.nicehash.com:3333
AIKAPOOL_URL=stratum+tcp://aikapool.com:3333

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API port
API_PORT=3001

# WebSocket port
WS_PORT=3002

# Frontend port
FRONTEND_PORT=3000

# API base URL
VITE_API_URL=http://localhost:3001/api
# API_BASE_URL=http://localhost:3001/api

# WebSocket URL
VITE_WS_URL=ws://localhost:3002
# WS_URL=ws://localhost:3002

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/mining-controller.log

# Enable console logging
CONSOLE_LOGGING=true

# Enable file logging
FILE_LOGGING=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Default number of threads
DEFAULT_THREADS=4

# Default intensity
DEFAULT_INTENSITY=8

# Hash rate update interval (in seconds)
HASH_RATE_UPDATE_INTERVAL=5

# Pool statistics update interval (in seconds)
POOL_STATS_UPDATE_INTERVAL=30

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Default wallet address (for mining rewards)
DEFAULT_WALLET_ADDRESS=S1a2b3c4d5e6f7g8h9i0j1k2l3m4n5o6p7q8r9s0t1u2v3w4x5y6z7

# Wallet encryption key (change this!)
WALLET_ENCRYPTION_KEY=your-wallet-encryption-key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type (sqlite, postgres, mysql)
DB_TYPE=sqlite

# Database file path (for SQLite)
DB_FILE=./data/mining.db

# Database URL (for PostgreSQL/MySQL)
# DB_URL=postgresql://username:password@localhost:5432/mining_db

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Enable email notifications
EMAIL_NOTIFICATIONS=false

# SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Discord webhook URL
DISCORD_WEBHOOK_URL=

# Telegram bot token
TELEGRAM_BOT_TOKEN=

# =============================================================================
# MONITORING
# =============================================================================

# Enable system monitoring
SYSTEM_MONITORING=true

# CPU temperature threshold (in Celsius)
CPU_TEMP_THRESHOLD=80

# GPU temperature threshold (in Celsius)
GPU_TEMP_THRESHOLD=85

# Memory usage threshold (in percentage)
MEMORY_USAGE_THRESHOLD=90

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Development mode
NODE_ENV=development

# Enable hot reload
HOT_RELOAD=true

# Enable debug mode
DEBUG=false

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Production URL
PRODUCTION_URL=https://your-domain.com

# SSL certificate path
SSL_CERT_PATH=

# SSL key path
SSL_KEY_PATH=

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Enable automatic backups
AUTO_BACKUP=true

# Backup interval (in hours)
BACKUP_INTERVAL=24

# Backup retention (in days)
BACKUP_RETENTION=7

# Backup directory
BACKUP_DIR=./backups 